<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="View.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:View.Pages"
    FlyoutBehavior="Disabled"
    Title="오늘애 단타 왕">

    <ShellContent
        Title="로그인"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <TabBar Route="main">
        <ShellContent Title="거래" Icon="coin.png" ContentTemplate="{DataTemplate pages:TickerPage}"/>
        <ShellContent Title="랭킹" Icon="ranking.png" ContentTemplate="{DataTemplate pages:RankingPage}"/>
    </TabBar>

</Shell>
