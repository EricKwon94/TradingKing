<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="View.Pages.SeasonPage"
                xmlns:vm="clr-namespace:ViewModel.ViewModels;assembly=ViewModel"
             xmlns:local ="clr-namespace:View.Pages"
                x:DataType="vm:SeasonViewModel"
             Title="명예의 전당">

    <CollectionView ItemsSource="{Binding Seasons}" Margin="16">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
        </CollectionView.ItemsLayout>
        
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="vm:SeasonModel">
                <HorizontalStackLayout Spacing="8">
                    <Button Command="{Binding ClickCommand}">
                        <Button.Text>
                            <MultiBinding StringFormat="{}시즌: {0}   시작: {1}">
                                <Binding Path="Seq"/>
                                <Binding Path="StartedAt"/>
                            </MultiBinding>
                        </Button.Text>
                    </Button>
                </HorizontalStackLayout>                
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    
</local:BasePage>